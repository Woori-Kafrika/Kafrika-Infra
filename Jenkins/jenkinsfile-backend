pipeline {
    agent any
    
    environment {
        DOCKER_REGISTRY = 'localhost:5001'
        DOCKER_IMAGE = "${DOCKER_REGISTRY}/kafrika-backend"
        DOCKER_TAG = "v${env.BUILD_NUMBER}"
        SCANNER_HOME = tool 'sonar-scanner'
    }
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
                sh 'chmod +x ./gradlew'
            }
        }
        
        stage('Build & Test') {
            steps {
                sh 'bash ./gradlew clean build jacocoTestReport'
                
                // ì•„í‹°íŒ©íŠ¸ ë³´ê´€
                archiveArtifacts artifacts: 'build/libs/*.jar', fingerprint: true
                
                // í…ŒìŠ¤íŠ¸ ê²°ê³¼
                junit testResults: 'build/test-results/test/*.xml', allowEmptyResults: true
            }
        }
        
       stage('SonarQube Analysis') {
        steps {
          withSonarQubeEnv('SonarQube-Local') {
            script {
              def scannerHome = tool 'sonar-scanner'
              sh """
                echo "Scanner path: ${scannerHome}"
                ls -l ${scannerHome}/bin/sonar-scanner || true

                # ì‹¤í–‰ ê¶Œí•œ ë¶€ì—¬ (noexecì´ë©´ ì´ê±´ íš¨ê³¼ ì—†ì„ ìˆ˜ ìˆìŒ)
                chmod +x ${scannerHome}/bin/sonar-scanner || true

                # noexec ë°©ì§€: ì‰˜ë¡œ ì‹¤í–‰
                sh ${scannerHome}/bin/sonar-scanner \
                  -Dsonar.projectKey=kafrika-backend \
                  -Dsonar.projectName="Kafrika Backend" \
                  -Dsonar.sources=src/main/java \
                  -Dsonar.tests=src/test/java \
                  -Dsonar.java.binaries=build/classes/java/main \
                  -Dsonar.java.test.binaries=build/classes/java/test \
                  -Dsonar.coverage.jacoco.xmlReportPaths=build/reports/jacoco/test/jacocoTestReport.xml \
                  -Dsonar.junit.reportPaths=build/test-results/test \
              """
            }
          }
        }
      }


        
        stage('Quality Gate') {
            steps {
                echo "ğŸ“Š Checking Quality Gate..."
                
                script {
                    try {
                        timeout(time: 5, unit: 'MINUTES') {
                            def qg = waitForQualityGate()
                            if (qg.status != 'OK') {
                                echo "âš ï¸ Quality Gate status: ${qg.status}"
                                echo "ğŸ“Š SonarQube URL: http://localhost:9000/dashboard?id=kafrika-backend"
                                currentBuild.result = 'UNSTABLE'
                            } else {
                                echo "âœ… Quality Gate passed!"
                            }
                        }
                    } catch (Exception e) {
                        echo "âš ï¸ Quality Gate check failed: ${e.message}"
                        echo "ğŸ“Š Check SonarQube manually: http://localhost:9000"
                        currentBuild.result = 'UNSTABLE'
                    }
                }
            }
        }
        
        stage('Build Docker Image') {
            steps {
                sh '''
                    echo "ğŸ³ Building Docker image..."
                    docker build -t ${DOCKER_IMAGE}:${DOCKER_TAG} .
                    docker tag ${DOCKER_IMAGE}:${DOCKER_TAG} ${DOCKER_IMAGE}:latest
                    
                    echo "ğŸ“ Image info:"
                    docker images ${DOCKER_IMAGE}
                '''
            }
        }
        
        stage('Push to Registry') {
            steps {
                sh '''
                    echo "â¬†ï¸ Pushing to registry..."
                    
                    # Registry ì—°ê²° í™•ì¸
                    curl -fsSL --max-time 10 http://docker-registry-local:5000/v2/ >/dev/null
                    
                    # ì´ë¯¸ì§€ í‘¸ì‹œ
                    docker push ${DOCKER_IMAGE}:${DOCKER_TAG}
                    docker push ${DOCKER_IMAGE}:latest
                    
                    echo "âœ… Images pushed successfully"
                    echo "ğŸ“¦ ${DOCKER_IMAGE}:${DOCKER_TAG}"
                    echo "ğŸ“¦ ${DOCKER_IMAGE}:latest"
                '''
            }
        }
        
        stage('Update GitOps') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'github-token', usernameVariable: 'GIT_USERNAME', passwordVariable: 'GIT_PASSWORD')]) {
                    sh '''
                        if [ -f k8s/deployment.yaml ]; then
                            echo "ğŸ“ Updating GitOps manifest..."
                            sed -i "s|image: .*kafrika-backend:.*|image: ${DOCKER_IMAGE}:${DOCKER_TAG}|g" k8s/deployment.yaml
                            
                            echo "ğŸ“‹ Updated deployment.yaml:"
                            grep -A2 -B2 "image:" k8s/deployment.yaml || true
                            
                            git config user.email "jenkins@company.com"
                            git config user.name "Jenkins CI"
                            
                            # ìµœì‹  ë³€ê²½ì‚¬í•­ ê°€ì ¸ì˜¤ê¸°
                            git remote set-url origin https://${GIT_USERNAME}:${GIT_PASSWORD}@github.com/Woori-Kafrika/Kafrika-Infra.git
                            git pull origin main --rebase || true
                            
                            if ! git diff --quiet k8s/deployment.yaml; then
                                git add k8s/deployment.yaml
                                git commit -m "ğŸš€ Deploy kafrika-backend:${DOCKER_TAG} [skip ci]"
                                git push origin HEAD:main
                                
                                echo "âœ… GitOps updated successfully"
                            else
                                echo "â„¹ï¸ No changes to commit"
                            fi
                        else
                            echo "âš ï¸ k8s/deployment.yaml not found"
                            find . -name "*.yaml" -o -name "*.yml" | head -10
                        fi
                    '''
                }
            }
        }
    }
    
    post {
        always {
            sh '''
                echo "ğŸ§¹ Cleanup..."
                docker rmi ${DOCKER_IMAGE}:${DOCKER_TAG} || true
                docker rmi ${DOCKER_IMAGE}:latest || true
                docker system prune -f || true
            '''
        }
        success {
            echo "âœ… CI/CD íŒŒì´í”„ë¼ì¸ ì„±ê³µ! ğŸ‰"
            echo "ğŸ“¦ ì´ë¯¸ì§€: ${env.DOCKER_IMAGE}:${env.DOCKER_TAG}"
            
            script {
                if (currentBuild.result == 'UNSTABLE') {
                    echo "âš ï¸ í’ˆì§ˆ ê²Œì´íŠ¸ ì´ìŠˆê°€ ìˆì§€ë§Œ ë°°í¬ëŠ” ì„±ê³µí–ˆìŠµë‹ˆë‹¤"
                    echo "ğŸ“Š SonarQubeì—ì„œ ì½”ë“œ í’ˆì§ˆì„ í™•ì¸í•˜ì„¸ìš”: http://localhost:9000"
                }
            }
        }
        failure {
            echo "âŒ ë¹Œë“œ ì‹¤íŒ¨!"
        }
        unstable {
            echo "âš ï¸ ë¹Œë“œëŠ” ì„±ê³µí–ˆì§€ë§Œ í’ˆì§ˆ ì´ìŠˆê°€ ìˆìŠµë‹ˆë‹¤"
            echo "ğŸ“Š SonarQube ë¦¬í¬íŠ¸ë¥¼ í™•ì¸í•˜ì„¸ìš”: http://localhost:9000/dashboard?id=kafrika-backend"
        }
    }
}