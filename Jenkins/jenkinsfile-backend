pipeline {
    agent any
    
    environment {
        DOCKER_REGISTRY = 'localhost:5001'
        DOCKER_IMAGE = "${DOCKER_REGISTRY}/kafrika-backend"
        DOCKER_TAG = "v${env.BUILD_NUMBER}"
    }
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
                sh 'chmod +x ./gradlew'
            }
        }
        
        stage('Build & Test') {
            steps {
                sh 'bash ./gradlew clean build jacocoTestReport'
                
                // ì•„í‹°íŒ©íŠ¸ ë³´ê´€
                archiveArtifacts artifacts: 'build/libs/*.jar', fingerprint: true
                
                // í…ŒìŠ¤íŠ¸ ê²°ê³¼
                junit testResults: 'build/test-results/test/*.xml', allowEmptyResults: true
            }
        }
        
        stage('Build Docker Image') {
            steps {
                script {
                    def image = docker.build("${DOCKER_IMAGE}:${DOCKER_TAG}", ".")
                    image.tag("latest")
                }
            }
        }
        
        stage('Push to Registry') {
            steps {
                script {
                    docker.withRegistry("http://${DOCKER_REGISTRY}") {
                        def image = docker.image("${DOCKER_IMAGE}:${DOCKER_TAG}")
                        image.push()
                        image.push("latest")
                    }
                }
            }
        }
        
        stage('Update GitOps') {
            steps {
                sh '''
                    if [ -f k8s/deployment.yaml ]; then
                        echo "ğŸ“ Updating GitOps manifest..."
                        sed -i "s|image: .*kafrika-backend:.*|image: ${DOCKER_IMAGE}:${DOCKER_TAG}|g" k8s/deployment.yaml
                        
                        git config user.email "jenkins@company.com"
                        git config user.name "Jenkins CI"
                        
                        if ! git diff --quiet k8s/deployment.yaml; then
                            git add k8s/deployment.yaml
                            git commit -m "ğŸš€ Deploy kafrika-backend:${DOCKER_TAG} [skip ci]"
                            git push origin HEAD:main
                            echo "âœ… GitOps updated successfully"
                        else
                            echo "â„¹ï¸ No changes to commit"
                        fi
                    else
                        echo "âš ï¸ k8s/deployment.yaml not found"
                    fi
                '''
            }
        }
    }
    
    post {
        always {
            script {
                sh '''
                    echo "ğŸ§¹ Cleanup..."
                    docker rmi ${DOCKER_IMAGE}:${DOCKER_TAG} || true
                    docker rmi ${DOCKER_IMAGE}:latest || true
                    docker system prune -f || true
                '''
            }
        }
        success {
            echo "âœ… CI/CD íŒŒì´í”„ë¼ì¸ ì„±ê³µ! ğŸ‰"
            echo "ğŸ“¦ ì´ë¯¸ì§€: ${env.DOCKER_IMAGE}:${env.DOCKER_TAG}"
        }
        failure {
            echo "âŒ ë¹Œë“œ ì‹¤íŒ¨!"
        }
    }
}